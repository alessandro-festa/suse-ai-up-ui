<template>
  <div v-if="show" class="modal-overlay" @click="$emit('close')">
    <div class="modal-content" @click.stop>
      <div class="modal-header">
        <h3>Deploy MCP Server to Kubernetes</h3>
        <button @click="$emit('close')" class="btn btn-sm">Ã—</button>
      </div>
      <div class="modal-body">
        <div v-if="server" class="deployment-section">
          <div class="server-info">
            <h4>{{ server.name }}</h4>
            <p>{{ server.description }}</p>
            <div class="server-meta">
              <span class="meta-item">ID: {{ server.id }}</span>
              <span class="meta-item">Status: {{ server.validation_status || 'Unknown' }}</span>
            </div>
          </div>

          <div v-if="server.config_template" class="config-section">
            <h4>Deployment Configuration</h4>

            <div class="config-preview">
              <div class="config-item">
                <label>Command:</label>
                <code>{{ server.config_template.command }}</code>
              </div>
              <div class="config-item">
                <label>Arguments:</label>
                <code>{{ server.config_template.args?.join(' ') || 'None' }}</code>
              </div>
              <div class="config-item">
                <label>Transport:</label>
                <code>{{ server.config_template.transport }}</code>
              </div>
              <div class="config-item">
                <label>Image:</label>
                <code>{{ server.config_template.image }}</code>
              </div>
            </div>

            <div v-if="server.config_template.env" class="env-vars-section">
              <h5>Environment Variables</h5>
              <div class="env-vars-grid">
                <div v-for="(value, key) in server.config_template.env" :key="key" class="env-var-item">
                  <label :for="`env-${key}`">{{ key }}</label>
                  <input
                    :id="`env-${key}`"
                    type="text"
                    v-model="deploymentConfig.env_vars[key]"
                    :placeholder="value || 'Enter value'"
                    class="env-input"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="deployment-options">
              <h5>Deployment Options</h5>
              <div class="options-grid">
                <div class="option-item">
                  <label for="replicas">Replicas:</label>
                  <input
                    id="replicas"
                    type="number"
                    v-model.number="deploymentConfig.replicas"
                    min="1"
                    max="10"
                    class="option-input"
                  />
                </div>

                <div v-if="server.config_template.resource_limits?.cpu" class="option-item">
                  <label for="cpu">CPU Limit:</label>
                  <input
                    id="cpu"
                    type="text"
                    v-model="deploymentConfig.resources.cpu"
                    :placeholder="server.config_template.resource_limits.cpu"
                    class="option-input"
                  />
                </div>

                <div v-if="server.config_template.resource_limits?.memory" class="option-item">
                  <label for="memory">Memory Limit:</label>
                  <input
                    id="memory"
                    type="text"
                    v-model="deploymentConfig.resources.memory"
                    :placeholder="server.config_template.resource_limits.memory"
                    class="option-input"
                  />
                </div>
              </div>
            </div>
          </div>

          <div v-else class="no-config">
            <p>This server does not have deployment configuration available.</p>
          </div>

          <div v-if="error" class="error-message">
            {{ error }}
          </div>

          <div class="deployment-actions">
            <button
              type="button"
              class="btn btn-secondary"
              @click="$emit('close')"
            >
              Cancel
            </button>
            <button
              type="button"
              class="btn btn-primary"
              @click="deployServer"
              :disabled="!canDeploy || deploying"
            >
              {{ deploying ? 'Deploying...' : 'Deploy to Kubernetes' }}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script lang="ts">
import { defineComponent, ref, computed, watch } from 'vue';
// import { MCPService } from '../../services/mcp-service';
import type { DeploymentRequest, DeploymentConfig } from '../../types/mcp-types';
import type { MCPServer } from '../../services/registry-api';

// Using the correct DeploymentConfig from types

export default defineComponent({
  name: 'DeploymentModal',

  props: {
    show: {
      type: Boolean,
      required: true
    },
    server: {
      type: Object as () => MCPServer | null,
      default: null
    }
  },

  emits: ['close', 'deployed'],

  setup(props, { emit }) {
    const deploymentConfig = ref({
      env_vars: {} as Record<string, string>,
      replicas: 1,
      resources: {
        cpu: '',
        memory: ''
      }
    });

    const deploying = ref(false);
    const error = ref('');

    const canDeploy = computed(() => {
      if (!props.server?.config_template) return false;

      // Check if all required environment variables are provided
      const requiredEnvVars = Object.keys(props.server.config_template.env || {});
      return requiredEnvVars.every(key => deploymentConfig.value.env_vars[key]?.trim());
    });

    // Initialize deployment config when server changes
    watch(() => props.server, (newServer) => {
      if (newServer) {
        deploymentConfig.value = {
          env_vars: { ...(newServer.config_template?.env || {}) },
          replicas: 1,
          resources: {
            cpu: newServer.config_template?.resource_limits?.cpu || '',
            memory: newServer.config_template?.resource_limits?.memory || ''
          }
        }
      }
    });

    return {
      deploymentConfig,
      deploying,
      error,
      canDeploy,
      deployServer
    };
</script>

